<div class='container mx-auto'>
  <div class='text-center mt-4'>
    <h1 class='text-lg font-semibold'><%= t('titles.login') %></h1>
  </div>
  <%= form_with url: login_path do |f| %>
    <%= f.label :email, t('activerecord.attributes.user.email'), class: 'label w-full md:w-1/2 mx-auto' %>
    <%= f.email_field :email, class: 'input input-bordered form-control mb-4 w-full md:w-1/2 mx-auto' %>
    
    <%= f.label :password, t('activerecord.attributes.user.password'), class: 'label w-full md:w-1/2 mx-auto' %>
    <%= f.password_field :password, class: 'input input-bordered form-control mb-4 w-full md:w-1/2 mx-auto' %>

    <div class='mx-auto md:w-1/2'>
      <%= f.submit t('helpers.submit.login'), class: 'btn btn-primary w-full mt-6 mb-6' %>
    </div>
  <% end %>
  <div class='text-center mb-6'>
    <%= link_to t('links.register_page'), new_user_path %>
  </div>
</div>
