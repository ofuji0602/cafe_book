<div class="grid place-items-center mb-20">
  <h1 class="text-lg text-bold font-semibold my-5"><%= t('titles.my_page') %></h1>
  <div class="flex justify-evenly items-center">
    <div class="flex flex-col">
      <div class="flex justify-center">
        <%= image_tag current_user.avatar_url, class: "mb-5 rounded-full w-24 h-24 shadow-md" %>
      </div>
      <p class="mb-4 text-center"><%= @user.name %></p>
      <%= link_to t('helpers.submit.edit'), edit_my_page_path, class: "bg-gray-300 w-full sm:w-40 h-10 rounded-lg mb-5 sm:mb-0 text-sm flex items-center justify-center px-5 hover:bg-gray-400 active:bg-gray-500" %>
    </div>
  </div>
</div>
